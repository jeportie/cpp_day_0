NAME = megaphone
CXX = c++
CXXFLAGS = -Wall -Wextra -Werror -std=c++98
OUTDIR = bin
OBJDIR = obj

### BEGIN AUTO GENERATED FILES ###
# List of source files:
SRC = \

### END AUTO GENERATED FILES ###


OBJS = $(patsubst %.cpp,$(OBJDIR)/%.o,$(SRC))

all: $(OUTDIR)/$(NAME)

$(OUTDIR)/$(NAME): $(OBJS) | $(OUTDIR)
	$(CXX) $(CXXFLAGS) $(OBJS) -o $@

$(OBJDIR)/%.o: %.cpp | $(OBJDIR)
	$(CXX) $(CXXFLAGS) -c $< -o $@

$(OBJDIR) $(OUTDIR):
	mkdir -p $@

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(OUTDIR)/$(NAME)
	rm -rf $(OBJDIR) $(OUTDIR)

re: fclean all

build_and_run: all
	./$(OUTDIR)/$(NAME)

run:
	./$(OUTDIR)/$(NAME)

.PHONY: all clean fclean re build_and_run run
